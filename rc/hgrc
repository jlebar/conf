qimportbz = $CONFDIR/hgext/qimportbz
bzexport = $CONFDIR/hgext/bzexport/bzexport.py
patience = $CONFDIR/hgext/hg-patience/patience.py
#mqext = $CONFDIR/hgext/mqext
#inotify =
