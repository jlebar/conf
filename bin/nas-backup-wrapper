#!/bin/bash

echo "Starting backup at `date`"

cd $(dirname $0)
TMP=`mktemp`
./nas-backup &> $TMP

DATE=`date --rfc-3339=date`
if [ $? -ne 0 ]; then
  OUTFILE=/home/jlebar/Desktop/backup-FAILURE-$DATE
  echo "Backup failure on `date`" > $OUTFILE
else
  OUTFILE=/home/jlebar/Desktop/backup-log-$DATE
  echo "Backup succeeded on `date`" > $OUTFILE
fi

cat $TMP >> $OUTFILE

echo "Backup finished at `date`"
